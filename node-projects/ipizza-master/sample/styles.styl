
html, body
  background #ffffe5
  font-family Helvetica, sans-serif
  min-height 100%
  margin 0
  min-width 670px

.contents
  width 550px
  margin 0px auto
  padding 5px 45px
  background-color #e7e5bb
  height 100%

h1
  margin-left 5px

table
  border-spacing 6px

td
  background #c00
  padding 4px 7px
  font-size 13px
  background #d8d6a8
  &:first-child
    width 180px

input
  border 1px solid #666
  padding 4px 5px
  font-size 11px
  width 200px

.select-provider
  padding 5px
  .label
    font-size 12px
    font-weight bold
    margin 5px 0
  input
    border-radius 4px
    width 130px
    margin 3px 0
    padding 6px 0
    background-color #5a563f
    color #fff
    font-weight bold
    cursor pointer
    &:hover
      background-color #3b392e

.help
  color #666
  padding 10px
  font-size 11px
  span
    font-weight bold
